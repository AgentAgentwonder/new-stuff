# Environment Variables for Memecoin Trading Application
# Copy this file to .env.local and fill in your actual values

# === REQUIRED ===
# Get your API key from https://helius.dev
HELIUS_API_KEY=your_helius_api_key_here

# === OPTIONAL ===
# Jupiter Aggregator (default: https://quote-api.jup.ag/v6)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# DexScreener API (default: https://api.dexscreener.com/latest)
DEXSCREENER_API_URL=https://api.dexscreener.com/latest

# Solana RPC Endpoint (will use Helius if not specified)
RPC_ENDPOINT=https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# === TRADING CONFIGURATION ===
# Maximum position size in USD (default: 1000)
MAX_POSITION_SIZE=1000

# Minimum liquidity requirement in USD (default: 10000)
MIN_LIQUIDITY=10000

# Maximum slippage percentage (default: 3)
MAX_SLIPPAGE=3

# === SECURITY ===
# WARNING: NEVER commit this to version control!
# Only use for development/testing with a throwaway wallet
# WALLET_PRIVATE_KEY=your_private_key_here

# === DATABASE ===
# Database connection string (optional - will use local storage if not provided)
# DATABASE_URL=sqlite:./trading.db

# === LOGGING ===
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# === DEVELOPMENT ===
NODE_ENV=development
HOT_RELOAD=true
